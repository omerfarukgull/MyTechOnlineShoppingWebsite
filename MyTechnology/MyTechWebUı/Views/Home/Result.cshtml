@using MyTechEntity;
@{
    ViewData["Title"] = "Ana Sayfa";
}
<div class="row">
    <div class="col-md-12 ">
        <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Arama Sonuçları</span></h2>
        @if (Model.Count == 0)
        {
            <div class="col-md-9">
                <div class="alert alert-info">Ürün Bulunamadı</div>
            </div>
        }
        else
        {
            <div class="row">
                @await Component.InvokeAsync("ProductList",ViewBag.Search)
            </div>
        }
    </div>
</div>
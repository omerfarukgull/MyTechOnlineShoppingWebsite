@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_PasswordReset.cshtml";
}

<div class="col-lg-4 mx-auto">
    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
        <div class="brand-logo">
            <a href="#" class="text-decoration-none">
                <span class="h1 text-uppercase text-warning bg-dark px-2">Multi</span>
                <span class="h1 text-uppercase text-dark bg-warning px-2 ml-n1">Shop</span>
            </a>
        </div>
        <h4>Şifremi Unuttum</h4>
        <h6 class="font-weight-light">Şifre yenilemek için Alanları Doldurunuz</h6>
        <form asp-controller="Account" asp-action="ForgotPassword" method="post" class="pt-3">
            <div class="form-group">
                <input type="email" name="Email" class="form-control form-control-lg" id="exampleInputUsername2" placeholder="Email Adresi">

            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-block btn-warning  btn-lg font-weight-medium auth-form-btn">Gönder</button>
            </div>
        </form>
    </div>
</div>

@model ResetPasswordModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_PasswordReset.cshtml";
}

<div class="col-lg-4 mx-auto">
    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
        <div class="brand-logo">
            <a href="#" class="text-decoration-none">
                <span class="h1 text-uppercase text-warning bg-dark px-2">My Tech</span>
                <span class="h1 text-uppercase text-dark bg-warning px-2 ml-n1">Shop</span>
            </a>
        </div>
        <h4>Şifre Değiştir</h4>
        <h6 class="font-weight-light">Şifre yenilemek için Alanları Doldurunuz.</h6>
        <form asp-controller="Account" asp-action="ResetPassword" method="post" class="pt-3">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input  type="hidden" asp-for="Token"/>
            <div class="form-group">
                <input type="text" asp-for="Email" class="form-control form-control-lg" id="exampleInputUsername2" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" type="password" class="form-control form-control-lg" id="exampleInputPassword2" placeholder="Yeni Şifre">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-block btn-warning btn-lg font-weight-medium auth-form-btn">Şifre Yenile</button>
            </div>
        </form>
    </div>
</div>


